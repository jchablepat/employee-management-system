@implements IDisposable

@if (allState.ShowCountry)
{
	<div class="container mt-5">
		<div class="row">
			<div class="col-lg-12">
				<div class="card">
					<div class="card-header">
						<h4 class="float-start">Countries</h4>
						<button class="btn btn-outline-success float-end" @onclick="AddButtonClicked">
							<i class="bi bi-plus-circle-dotted"></i> Add Country
						</button>
					</div>
				</div>
				<div class="card-header" style="max-height:580px;overflow-x:hidden;overflow-y:scroll">
					<div class="card-body">
						<table class="table table-striped">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Id</th>
									<th scope="col">Country</th>
									<th scope="col">Action</th>
								</tr>
							</thead>
							<tbody>
								@if (Countries is not null)
								{
									int count = 1;
									foreach (var item in Countries)
									{
										<tr>
											<th scope="row">@count</th>
											<td>@item.Id</td>
											<td>@item.Name</td>
											<td>
												<i class="bi bi-pencil text-info" id="cursorStyle" @onclick="() => EditClicked(item)"></i>
												<i class="bi bi-trash text-danger" id="cursorStyle2" @onclick="() => DeleteClicked(item)"></i>
											</td>
										</tr>
										count++;
									}
								}
								else
								{
									<tr>
										<td colspan="4">
											<div class="alert alertalert-info text-center">
												No countries added yet!
											</div>
										</td>
									</tr>
								}

							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
}

<style>
	#cursorStyle {
		cursor: pointer;
	}
</style>

<CountryDialog @ref="countryDialog" Country="Country" OnCountryAdded="OnCountryAdded" />

@code {
	public string Title { get; set; } = "Add Country";
	CountryDialog? countryDialog;
	Country Country = new();
	public List<Country> Countries { get; set; } = new();

	protected async override Task OnInitializedAsync()
	{
		await GetCountries();
		allState.Action += StateHasChanged;
	}

	private async Task GetCountries()
	{
		Countries = await countryService.GetAll(Constants.CountryBaseUrl);
	}

	private void AddButtonClicked()
	{
		countryDialog?.ChangeTitle("Add Country");
		Country = new();
		OpenDialog();
	}

	private void OpenDialog()
	{
		countryDialog?.OpenDialog();
	}

	private async Task OnCountryAdded(Country country)
	{
		bool isValid = false;
		if (country.Id > 0)
		{
			var result = await countryService.Update(country, Constants.CountryBaseUrl);
			isValid = await DisplayMessage(result.Flag, result.Message);
		}
		else
		{
			var result = await countryService.Insert(country, Constants.CountryBaseUrl);
			isValid = await DisplayMessage(result.Flag, result.Message);
		}

		if (isValid)
		{
			Country = new();
			await GetCountries();
			countryDialog?.ChangeTitle("Add Country");
		}
	}

	private void EditClicked(Country country)
	{
		countryDialog?.ChangeTitle("Edit Country");
		Country = country;
		OpenDialog();
	}

	private async Task DeleteClicked(Country country)
	{
		bool confirm = await alertService.ShowConfirmation("Confirm Delete", $"Are you sure you wanna delete {country.Name}?");

		if (!confirm) return;

		var response = await countryService.Delete(country.Id, Constants.CountryBaseUrl);
		var result = await DisplayMessage(response.Flag, response.Message);
		if (result) await GetCountries();
	}

	private async Task<bool> DisplayMessage(bool flag, string message)
	{
		if (flag)
		{
			await alertService.ShowSuccessToast(message);
			return true;
		}
		else
		{
			await alertService.ShowErrorToast(message);
			return false;
		}
	}

	// Dispose method is used to unsubscribe from the event
	public void Dispose()
	{
		allState.Action -= StateHasChanged;
	}
}
