<CustomModal @bind-IsVisible="IsVisible" Title="@Title">
	<ChildContent>
			<EditForm Model="Branch" Enhance OnSubmit="Save">
				<div class="card border-success">
					<div class="card-body">
						<div class="form-group mb-2">
							<label class="form-label">Id</label>
							<input class="form-control" @bind="Branch.Id" disabled />
						</div>
						<div class="form-group mb-2">
							<label class="form-label">Name</label>
							<InputText class="form-control" @bind-Value="Branch.Name" />
						</div>
						<div class="form-group mb-2">
							@if (Branch.Department != null)
							{
								<MudSelect T="string" Label="Select a Department" Value="Branch.DepartmentId.ToString()" ValueChanged="OnValueChange">
									@foreach (var dept in Departments)
									{
										<MudSelectItem Value="@dept.Id.ToString()">@dept.Name</MudSelectItem>
									}
								</MudSelect>
							}
							else
							{
								<MudSelect T="string" Label="Select a Department" ValueChanged="OnValueChange">
									@foreach (var dept in Departments)
									{
										<MudSelectItem Value="@dept.Id.ToString()">@dept.Name</MudSelectItem>
									}
								</MudSelect>
							}
						</div>
					</div>
				</div>
			</EditForm>
	</ChildContent>
	<FooterContent>
		<button type="button" class="btn btn-primary" @onclick="Save">Save</button>
	</FooterContent>
</CustomModal>

@code {
	[Parameter] public Branch Branch { get; set; } = new();
	[Parameter] public List<Department> Departments { get; set; } = new();
	[Parameter] public EventCallback<Branch> OnBranchAdded { get; set; } // Callback to notify save operation event to parent component

	private bool IsVisible { get; set; } = false;
	private string Title { get; set; } = "Add Branch";

	private async void Save()
	{
		if (string.IsNullOrEmpty(Branch.Name))
			await alertService.ShowErrorToast("You need to provide a Branch name");

		else
			await OnBranchAdded.InvokeAsync(Branch);
	}

	public void OpenDialog()
	{
		IsVisible = true;
		StateHasChanged();
	}

	public void ChangeTitle(string title)
	{
		Title = title;
		StateHasChanged();
	}

	private void OnValueChange(string value)
	{
		if (int.TryParse(value, out int id))
		{
			Branch.DepartmentId = id;
		}
	}
}
